<%= simple_form_for @restaurant do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :poutine_price %>
  <%= f.association :restaurant_category, input_html: { class: "" }, include_hidden: false, as: :radio_buttons %>
  <%= f.input :photo, as: :file %>
  <%= f.submit "Soumettre le restaurant", class: "btn btn-primary" %>
  <%= link_to "Annuler", root_path, class: "btn btn-warning" %>
<% end %>
